#include <bits/stdc++.h>
#include <iostream>
#include <string>
using namespace std;

int main(){
    int city;
    int road;
    cin >> city;
    cin >> road;
    //vector<vector<int>> ans(city, vector<int> (city));
    int ans[city][city] = {0};
    int array[2] = {0};
    for(int i=0; i<road; i++){
        for(int j=0; j < 2; j++){
            cin >> array[j];
        }
        ans[array[0] - 1][array[1] - 1] = 1;
        ans[array[1] - 1][array[0] - 1] = 1;
    }
    int count = 0; 
    
    for(int i = 0; i < city; i++){
        count = 0;
        for(int j = 0; j < city; j++){
            if(ans[i][j] == 1){
                count++;
            }
        }
        cout << count;
        for(int j = 0; j < city; j++){
            if(ans[i][j] == 1){
                cout << " " << j + 1;
            }
        }
        cout << endl;
    }    
}
